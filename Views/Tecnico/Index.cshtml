@model TecnicoViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<div class="row">
<form method="get" asp-action="Index" asp-controller="Tecnico">
    <div class="row">
        <div class="col-6 form-group">
            <div class="input-group">
                <input class="form-control" asp-for="NameFilter"/>
                <div class="input-group-append">
                    <button class="btn btn-light ml-2" type="submit">Buscar</button>
                </div>
            </div>
        </div>
    </div>
</form>
</div>
<br>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tecnicos[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tecnicos[0].Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tecnicos[0].Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tecnicos[0].Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tecnicos[0].Especializacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tecnicos[0].Ubicacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tecnicos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especializacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ubicacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
